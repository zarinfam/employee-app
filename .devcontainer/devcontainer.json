// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
{
	"name": "employee-app",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
			"version": "latest",
			"helm": "latest",
			"minikube": "latest"
		},
		"ghcr.io/devcontainers/features/java:1": {
			"installMaven": true,
			"version": "17",
			"jdkDistro": "amzn",
			"gradleVersion": "latest",
			"mavenVersion": "latest",
			"antVersion": "latest",
			"groovyVersion": "latest"
		},
		"ghcr.io/rio/features/skaffold:2": {}
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"vscjava.vscode-java-pack",
				"vmware.vscode-boot-dev-pack",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"eamodio.gitlens"
			],
			"settings": {	
				"terminal.integrated.shell.linux": "/bin/zsh"
				// "dotfiles.repository": "https://github.com/NikiforovAll/dotfiles.git",
				// "dotfiles.installCommand": "~/dotfiles/src/dev-container/boot/install.sh",
				// "dotfiles.targetPath": "~/dotfiles"
			}
		}
	},
	"forwardPorts": [
		8080
	],
	"postCreateCommand": "bash scripts/devtools_provision.sh"
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "kubectl version",

	// Use 'postStartCommand' to run commands after the container is created like starting minikube.
	// "postStartCommand": "nohup bash -c 'minikube start &' > minikube.log 2>&1",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
